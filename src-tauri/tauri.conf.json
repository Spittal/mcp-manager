{
  "$schema": "https://raw.githubusercontent.com/nicklasoverworlds/tauri-settings/master/schemas/tauri-config-v2.json",
  "productName": "MCP Manager",
  "version": "0.1.0",
  "identifier": "com.mcpmanager.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm vite dev",
    "beforeBuildCommand": "pnpm vite build"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Manager",
        "width": 960,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
